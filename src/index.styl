
*
  box-sizing border-box

::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsl(0,0,14)

::-webkit-scrollbar-thumb
  background white

@font-face
  font-family 'Marcellus'
  font-style normal
  font-weight 400
  src url('Marcellus.woff'), local('Marcellus-Regular')

body
  margin 0px
  font-family Marcellus, "wenquanyi micro hei"
  color hsl(0,0,60)

a
  display block
  color hsl(0,0,60)
  text-decoration none
  box-shadow 0px 1px 0px hsla(0,0,50,0)
  padding-left 100px
  line-height 36px
  margin-left 60px
  -webkit-transition-duration 0.8s

  &:hover
    -webkit-transition-duration 0.4s
    box-shadow 0px 1px 0px hsla(0,0,50,1)

#background
  position fixed
  width 100%
  height 50%
  bottom 0px
  background-color hsl(0,0,14)

#about
  position fixed
  width 200px
  font-size 16px
  padding 40px
  bottom 50%

#list
  position absolute
  left 220px
  width 800px
  padding 240px 40px 400px

  div
    margin 10px 0px